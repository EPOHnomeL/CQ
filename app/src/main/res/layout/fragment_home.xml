<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:elevation="8dp"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:contentPadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoText="true"
                android:fontFamily="@font/playfair_display"
                android:gravity="center"
                android:text="Testing Text"
                android:textAlignment="center"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_copy"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@android:string/copy"
                    android:src="@drawable/ic_favourite"
                    app:srcCompat="@drawable/ic_copy_foreground"
                    tools:srcCompat="@drawable/ic_copy_foreground" />

                <ImageView
                    android:id="@+id/img_fav"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="EmptyFav"
                    android:src="@drawable/ic_favourite"
                    app:srcCompat="@drawable/ic_favourite_empty_foreground"
                    tools:srcCompat="@drawable/ic_favourite_empty_foreground" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>